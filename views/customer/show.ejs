<h3>Name: <%= customer.name %></h3>
<h3>Email: <%= customer.email %></h3>
<h3>State: <%= customer.state %></h3>
<hr>
<h3>Stocks</h3>
<table class="table table-bordered">
    <tr>
        <th>Symbol</th>
        <th>Number of shares</th>
        <th>Current Price</th>
        <th>View</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    <% _.each(customer.stocks, function (stock) { %>
    <tr data-id="<%= stock.id %>" data-model="stock">
        <td><%= stock.symbol %></td>
        <td><%= stock.number_of_shares %></td>
        <td></td>
        <td><a href="/stock/show/<%= stock.id %>" class="btn btn-info">Show</a></td>
        <td><a href="/stock/edit/<%= stock.id %>" class="btn btn-warning">Edit</a></td>
        <td><a href="/stock/destroy/<%= stock.id %>" class="btn btn-danger">Delete</a></td>
    </tr>
    <% })%>
</table>

<form action="/stock/new" method="post">
    <input type="hidden" value="<%= customer.id %>" name="owner">
    <input type="submit" value="Add Stock">
</form>