<form action="/customer/update/<%= customer.id %>" method="POST">
    <h2>Edit Customer</h2>

    <input value="<%= customer.name %>" type="text" placeholder="Name" name="name">
    <input value="<%= customer.email %>" type="text" placeholder="Email" name="email">
    <input value="<%= customer.state %>" type="text" placeholder="State" name="state">
    <input type="submit" value="Update Customer">

</form>